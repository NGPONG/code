{
  // diagnostcic
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "â›”",
  "diagnostic.warningSign": "ðŸš¸",
  "diagnostic.infoSign": "âž–",
  "diagnostic.hintSign": "âž•",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "â—‚ ",
  "diagnostic.messageTarget": "echo",
  "diagnostic.signOffset": 9999999,
  "diagnostic.virtualTextCurrentLineOnly": false,

  // suggest
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.maxCompleteItemCount": 200,
  "suggest.enablePreselect": false,
  "suggest.enablePreview": true,
  "suggest.noselect": false,

  // list
  //"list.previewSplitRight": true,
  
  // preferences
  //"coc.preferences.useQuickfixForLocations": false,
  "coc.preferences.snippets.enable": true,
  "coc.preferences.formatOnType": true,
  //"coc.preferences.formatOnInsertLeave": true,
  //"coc.preferences.formatOnSaveFiletypes": [
  //    "c",
  //    "cpp",
  //    "h",
  //    "hpp"
  //  ],
  
  // snippets
  "snippets.extends": {
    "cpp": ["c"]
  },
  "snippets.priority": 999,

  "snippets.userSnippetsDirectory": "~/code/config/nvim/ultisnips",

  // languageserver
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      // "trace.server": "verbose",
      "rootPatterns": [".ccls-root", ".ccls", "compile_commands.json",".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "" // stored in memory
        },
        "client": {
          "snippetSupport": false
        },
        "completion": {
          "placeholder": true,
          "detailedLabel": false
        },
        "highlight": { 
          "lsRanges" : true
        },
        "diagnostics": {
          "onChange": 1
        },
        "index": {
          "onChange": true
        }
      }
    }
  }
}
