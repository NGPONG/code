{
  // diagnostcic
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➕",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "◂ ",
  "diagnostic.messageTarget": "echo",
  "diagnostic.virtualTextCurrentLineOnly": false,

  // suggest
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.enablePreselect": false,
  "suggest.enablePreview": true,
  "suggest.noselect": false,

  // list
  //"list.previewSplitRight": true,
  
  // preferences
  //"coc.preferences.useQuickfixForLocations": false,
  "coc.preferences.formatOnType": true,
  //"coc.preferences.formatOnInsertLeave": true,
  //"coc.preferences.formatOnSaveFiletypes": [
  //    "c",
  //    "cpp",
  //    "h",
  //    "hpp"
  //  ],
  
  // snippets
  "snippets.extends": {
    "cpp": ["c"]
  },
  "snippets.priority": 999,
  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",

  // 等有时间在尝试 clangd 的配置
  //clangd
  // "clangd.arguments": ["--pch-storage=memory", "-j", "20", "--completion-style=detailed", "--background-index", "--all-scopes-completion=true"],
  // "clangd.disableProgressNotifications":false,
  // "clangd.disableSnippetCompletion":false,
  // "clangd.disableDiagnostics":false,
  // "clangd.disableCompletion":false,
  // "semanticTokens.filetypes":["c", "cpp"],
  // "clangd.inlayHints.enable":false,
  // "inlayHint.enable":false,

  // languageserver
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
       // "trace.server": "verbose",
      "rootPatterns": [".ccls-root", ".ccls", "compile_commands.json",".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "", // /tmp/ccls-cache
          "retainInMemory": 1
        },
        "client": {
          "snippetSupport": false
        },
        "completion": {
          "placeholder": true,
          "detailedLabel": false
        },
        "highlight": { 
          "lsRanges" : true
        },
        "diagnostics": {
          "onChange": 1
        },
        "index": {
          "onChange": true,
          // "threads": 4,
          "initialBlacklist": ["."]
        },
        "capabilities": {
          "documentOnTypeFormattingProvider": {
            "firstTriggerCharacter": ""
          }
        }
      }
      //,
      //"args": [
      //  "--log-file=./ccls.log",
      //  "--log-file-append=true",
      //  "-v=1"
      //]
    }
    ,
    "golang": {
      "command": "gopls",
      // "args": [
      //   "-logfile=gopls.log",
      //   "-rpc.trace"
      // ],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
    }
    ,
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    }
  }
}
