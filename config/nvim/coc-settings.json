{
  // diagnostcic
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➕",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "◂ ",
  "diagnostic.messageTarget": "echo",
  "diagnostic.signOffset": 9999999,
  "diagnostic.virtualTextCurrentLineOnly": false,

  // suggest
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.enablePreselect": false,
  "suggest.enablePreview": true,
  "suggest.noselect": false,

  // list
  //"list.previewSplitRight": true,
  
  // preferences
  //"coc.preferences.useQuickfixForLocations": false,
  "coc.preferences.snippets.enable": true,
  "coc.preferences.formatOnType": true,
  //"coc.preferences.formatOnInsertLeave": true,
  //"coc.preferences.formatOnSaveFiletypes": [
  //    "c",
  //    "cpp",
  //    "h",
  //    "hpp"
  //  ],
  
  // snippets
  "snippets.extends": {
    "cpp": ["c"]
  },
  "snippets.priority": 999,

  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",

  // languageserver
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      // "trace.server": "verbose",
      "rootPatterns": [".ccls-root", ".ccls", "compile_commands.json",".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "" // stored in memory
        },
        "client": {
          "snippetSupport": false
        },
        "completion": {
          "placeholder": true,
          "detailedLabel": false
        },
        "highlight": { 
          "lsRanges" : true
        },
        "diagnostics": {
          "onChange": 1
        },
        "index": {
          "onChange": true
        }
      }
    }
//    ,
//    "bash": {
//      "command": "bash-language-server",
//      "args": ["start"],
//      "filetypes": ["sh"],
//      "ignoredRootPaths": ["~"]
//    }
  }
}
