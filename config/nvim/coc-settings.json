{
    // code-lens
    "codeLens.enable": true,
    "codeLens.subseparator": " | ",

    // diagnostci
    "diagnostic.displayByAle": false,
    "diagnostic.errorSign": "â›”",
    "diagnostic.warningSign": "ðŸš¸",
    "diagnostic.infoSign": "âž–",
    "diagnostic.hintSign": "âž•",
    "diagnostic.signOffset": 9999999,
    "diagnostic.checkCurrentLine": true,
    //"diagnostic.refreshOnInsertMode": true,
    "diagnostic.virtualText": true,
    "diagnostic.virtualTextPrefix": "â—‚ ",
    "diagnostic.messageTarget": "echo",

    // suggest
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "suggest.maxCompleteItemCount": 200,
    "suggest.enablePreselect": true,
    "suggest.enablePreview": true,
    "suggest.noselect": false,

    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnTypeFiletypes": ";",

    "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "trace.server": "verbose",
      "rootPatterns": [".ccls-root", ".ccls", "compile_commands.json",".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        },
        "highlight": { "lsRanges" : true }
      }
    }
  }
}
